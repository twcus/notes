<div class="note-card-body">
    {{note.content}}
</div>
<div class="note-card-footer">
    {{note.modifiedDate}}
    <div class="footer-actions {{if isShowingConfirmationPrompt "confirming"}}">
        <button class="button note-delete" onclick={{disable-bubbling (action "showConfirmationPrompt")}}>{{fa-icon 'trash'}}</button>
        <button class="button delete-confirm" onclick={{disable-bubbling (action "confirm")}}>{{fa-icon 'check' }}</button>
        <button class="button delete-cancel" onclick={{disable-bubbling (action "showConfirmationPrompt")}}>{{fa-icon 'times' }}</button>
    </div>
</div>
