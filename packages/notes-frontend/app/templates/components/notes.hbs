{{#if isShowingModal}}
<Modal @focusedElement=".note-textarea" @onClose={{action "closeNote"}} @content={{activeNote.content}} as |mmodal|>
        <div class="modal-body">
            <Textarea @autoresize=true class="note-textarea" aria-label="Edit note"  @value={{activeNote.content}} />
        </div>
        <div class="modal-footer">
            <div class="icon-group">
                <button class="button">
                    {{fa-icon 'tag'}}
                </button>
                <button class="button">
                    {{fa-icon 'trash'}}
                </button>
            </div>
            <div class="button-group">
                <button class="button" {{action "closeNote"}}>Close</button>
                <button class="button  is-primary" {{action "saveNote"}}>Save</button>
            </div>
        </div>
    </Modal>
{{/if}}
<section class="toolbar">
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'list'}}
        </button>
    </div>
    <div class="toolbar-item">
        <div class="toolbar-search-container">
            {{fa-icon 'search'}}
            <input type="text" placeholder="Search" aria-label="Search notes">
        </div>
    </div>
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'filter' class="left"}}
            <span>Filter</span>
        </button>
    </div>
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'sort' class="left"}}Sort
        </button>
    </div>
    <div class="toolbar-item">
        <button class="button is-primary" {{action 'openNewNote'}}>
            {{fa-icon 'plus' class="left"}}Add New Note
        </button>
        {{#if isAddingNote}}
            <NewNote @onCancel={{action "openNewNote"}}
                     @onSave={{action "createNote"}}/>
        {{/if}}
    </div>
</section>
<section class="content">
    <div class="card-grid">
        {{#each notes as |note|}}
            <Card @note={{note}} @onClick=
                {{action "openNote"}}/>
        {{/each}}
    </div>
</section>
