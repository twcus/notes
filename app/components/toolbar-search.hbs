{{#if this.media.isDesktop}}
    <div class="search-container {{if @searchQuery.length "active"}}">
        <FaIcon @icon="search" @class="{{if @searchQuery "is-accented"}}" />
        <Input
            type="text"
            placeholder="Search Notes"
            aria-label="Search notes"
            @value={{@searchQuery}}
            {{on "input" this.searchQueryUpdated}}
        />
        <button type="button" class="button no-margin" {{on "click" @clearSearch}}><FaIcon @class="no-margin" @icon="times" /></button>
    </div>
{{else}}
    {{#if this.isSearchOpen}}
        <div class="search-container mobile">
            <button type="button" class="button" {{on "click" this.closeSearch}}><FaIcon @icon="arrow-left" /></button>
            <Input
                type="text"
                placeholder="Search Notes"
                aria-label="Search Notes"
                class="toolbar-search"
                @value={{@searchQuery}}
                {{on "input" this.searchQueryUpdated}}
            />
            <button type="button" class="button" {{on "click" @clearSearch}}><FaIcon @icon="times" /></button>
        </div>
    {{else}}
        <button type="button" class="button {{if @searchQuery "is-accented"}}" {{on "click" this.openSearch}}><FaIcon @icon="search" /></button>
    {{/if}}
{{/if}}
