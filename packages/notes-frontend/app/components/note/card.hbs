<LinkTo @tagName="div" @route="notes.edit" @model={{@note.id}} @activeClass="hidden" class="card {{if this.isActive "active"}} {{if @note.isNew "hidden"}} {{if (eq @note.id activeNote.note.id) "hidden" }}" >
    <div class="card-body">
        {{@note.content}}
    </div>
    <div class="card-footer">
        <span>8 Aug 19</span>
        <div class="action-bar">
            <DropdownSelect
                @options={{this.tags}}
                @selected={{this.selectedTags}}
                @onOpen={{this.onTagSelectorOpen}}
                @onClose={{this.onTagSelectorClose}}
                @onSelect={{this.selectTag}}
                @onCreate={{this.createTag}}
                @placeholder="Enter tag"
                @searchField="content"
                @stopPropagation=true
            >
                <FaIcon @icon="tag" />
            </DropdownSelect>
            <button {{on "click" (stop-propagation this.delete)}} class="button"><FaIcon @icon="trash" /></button>
        </div>
    </div>
</LinkTo>
