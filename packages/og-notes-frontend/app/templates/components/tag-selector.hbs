<PowerSelectMultipleWithCreate
    @options={{optionsPromise}}
    @selected={{selectedTags}}
    @onclose={{action "closeTagSelector"}}
    @renderInPlace=true
    @initiallyOpened=true
    @searchField="content"
    @oncreate={{action "createTag"}}
    @placeholder="Enter tag"
    @noMatchesMessage="Create tag"
    @triggerComponent="PowerSelect::SelectTrigger"
    @suggestedOptionComponent="PowerSelectSuggested"
    @onchange={{action "selectTag"}} as |tag|>
    <PowerSelect::SelectOption @content={{tag.content}} />
</PowerSelectMultipleWithCreate>
