<Modal @onClickOverlay={{action "saveAndClose"}}>
    <div class="modal-header collection-header">
        <Content-Editable @value={{collection.name}} placeholder="Enter collection name..." />
    </div>
    <div class="modal-body collection-modal-body">
        <div class="collection-modal-tag-list">
            {{#each collection.tags as |tag|}}
                <Tags::Tag @content={{tag.content}} />
            {{/each}}
        </div>
        <TagList class="collection-modal-tag-selector" @selectedTags={{collection.tags}} @onSelectTag={{action "selectTag"}} @createTag={{action "createTag"}} @getAllTags={{action "getAllTags"}}></TagList>
    </div>
    <div class="modal-footer">
        <div class="footer-items">
            <div class="footer-actions">
                <div class="icon-group">
                    <button {{action "saveAndClose"}} class="button">
                        {{fa-icon 'trash'}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</Modal>
