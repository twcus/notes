<div class="note-footer">
    <div class="tag-list collection-tags">
        {{#each @collectionTags as |tag|}}
            <Tags::Tag @tag={{tag}} />
        {{/each}}
    </div>
    <div class="tag-list">
        {{#each this.sortedTags as |tag|}}
            <Tags::Tag @tag={{tag}} @onRemove={{@onTagRemove}} />
        {{/each}}
    </div>
    <div class="action-bar">
        <Utils::Timestamp
            @date={{@note.modifiedDate}}
            @format="MMM DD YYYY"
            @enableDiff=true
            @diffPrecision="days"
            @diffLimit=7
        />
        <div class="actions">
            <Select::DropdownSelect
                @options={{@tags}}
                @selected={{@note.tags}}
                @onSelect={{@onTagSelect}}
                @onCreate={{@onTagCreate}}
                @searchEnabled={{true}}
                @searchMessage="No tags found"
                @createEnabled={{true}}
                @displayProperty="content"
                @isMultiselect={{true}}
                @placeholder="Enter tag"
                @searchMessage="No tags found"
                @emptyMessage="No tags found"
                @searchField="content"
                @stopPropagation={{true}}
            >
                <FaIcon @icon="tag" />
            </Select::DropdownSelect>
            <button {{on "click" (stop-propagation @onNoteDelete)}} class="button text"><FaIcon @icon="trash" /></button>
        </div>
    </div>
</div>
