<section class="toolbar">
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'list'}}
        </button>
    </div>
    <div class="toolbar-item">
        <div class="search-container">
            {{fa-icon 'search'}}
            <input type="text" placeholder="Search" aria-label="Search notes">
        </div>
    </div>
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'filter' class="left"}}
            <span>Filter</span>
        </button>
    </div>
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'sort' class="left"}}Sort
        </button>
    </div>
    <div class="toolbar-item">
        <LinkTo @tagName="button" class="is-primary button" @route="notes.new">
            {{fa-icon 'plus' class="left"}}Add New Note
        </LinkTo>
    </div>
</section>
<section class="content">
    <div class="card-grid">
        {{#each model as |note|}}
            <LinkTo @tagName="div" @route="notes.edit" @model={{note.id}}>
                <Card @note={{note}} @onClick={{action "openNote" note}} @onConfirm={{action "deleteNote" note}}/>
            </LinkTo>
        {{/each}}
    </div>
</section>
{{outlet}}
