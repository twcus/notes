<div class="list-pane">
    {{#each @notes as |note|}}
        <Link @route="notes.edit" @models={{array note.id}} as |link|>
            <div class="list-item pell-content {{if note.isNew "new"}} {{if link.isActive "active"}}" {{on "click" link.transitionTo}}>
                {{{note.content}}}
            </div>
        </Link>
    {{/each}}
</div>
