{{#if isShowingOverlay}}
    <Modal @onClose={{action "closeNote"}}>
        <div class="modal-body">
            {{activeNote.content}}
        </div>
        <div class="modal-footer">
            <div class="icon-group">
                <button class="button">
                    {{fa-icon 'tag'}}
                </button>
                <button class="button">
                    {{fa-icon 'trash'}}
                </button>
            </div>
            <div class="button-group">
                <button class="button">Close</button>
                <button class="button is-primary">Save</button>
            </div>
        </div>
    </Modal>
{{/if}}
<section class="toolbar">
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'list'}}
        </button>
    </div>
    <div class="toolbar-item">
        <div class="search-container">
            {{fa-icon 'search'}}
            <input type="text" placeholder="Search" aria-label="Search notes">
        </div>
    </div>
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'filter' class="left"}}
            <span>Filter</span>
        </button>
    </div>
    <div class="toolbar-item">
        <button class="button">
            {{fa-icon 'sort' class="left"}}Sort
        </button>
    </div>
    <div class="toolbar-item">
        <button class="button is-primary" {{action 'openNewNote'}}>
            {{fa-icon 'plus' class="left"}}Add New Note
        </button>
        {{#if isAddingNote}}
            <NewNote @onCancel={{action "openNewNote"}}
                     @onSave={{action "createNote"}}/>
        {{/if}}
    </div>
</section>
<section class="cards">
    {{#each this.notes as |note|}}
        <Card @note={{note}} @onClick=
            {{action "openNote"}}/>
    {{/each}}
</section>
