<div class="dropdown-container">
    <Textarea aria-label="Take a new note" @placeholder="Take a new note..." @cols="50" @rows="10" @value={{this.content}}></Textarea>
    <div class="dropdown-footer">
        <button class="button is-primary" {{action 'save'}}>Save</button>
        <button class="button" {{action 'cancel'}}>Cancel</button>
    </div>
</div>