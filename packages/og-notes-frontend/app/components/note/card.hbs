<LinkTo @tagName="div" class="card" @route="notes.edit" @model={{@note.id}} {{on "mouseleave" this.handleMouseLeave}} @disabled=true>
    <div class="card-body">
        {{@note.content}}
    </div>
    <div class="card-footer">
        <span>{{moment-format '12-25-1995' 'MMM DD YYYY'}}</span>
        <div class="footer-actions {{if isConfirmingDelete "confirming"}}">
            <TagDropdown />
            <button class="button note-delete" {{on "click" (stop-propagation this.showTagSelector)}}><span>5</span><FaIcon @icon="tag" class="right"/></button>
            <button class="button note-delete" {{on "click" (stop-propagation this.showDeleteConfirm)}}><FaIcon @icon="trash"/></button>
            <button class="button delete-confirm" {{on "click" (stop-propagation this.deleteConfirm)}}><FaIcon @icon="check"/></button>
            <button class="button delete-cancel" {{on "click" (stop-propagation this.deleteCancel)}}><FaIcon @icon="times"/></button>
        </div>
    </div>
</LinkTo>
