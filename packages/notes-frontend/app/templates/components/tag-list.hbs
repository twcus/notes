<div class="tag-list">
</div>
<div class="tag-search">
    <PowerSelectCreate
        @options={{optionsPromise}}
        @selected={{selectedTags}}
        @onclose={{action "onTagListClose"}}
        @renderInPlace=true
        @initiallyOpened=true
        @searchField="content"
        @oncreate={{action "createTag"}}
        @placeholder="Enter tag"
        @noMatchesMessage="Create tag"
        @triggerComponent="PowerSelectTrigger"
        @suggestedOptionComponent="PowerSelectSuggested"
        @showCreateWhen={{action "shouldShowCreateOption"}}
        @onchange={{action "selectedTag"}} as |tag|>
        <PowerSelectOption @content={{tag.content}} />
    </PowerSelectCreate>
</div>

