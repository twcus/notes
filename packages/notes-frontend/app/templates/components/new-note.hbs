<div class="dropdown-container">
    <Textarea @autoresize=true aria-label="Take a new note" @placeholder="Take a new note..." @max-height="500px" @rows=5 @value={{content}} />
    <div class="dropdown-footer">
        <div class="button-group">
            <button class="button" {{action 'cancel'}}>Cancel</button>
            <button class="button is-primary" {{action 'save'}}>Save</button>
        </div>
    </div>
</div>