<BasicDropdown
    @onOpen={{this.open}}
    @onClose={{this.close}}
    as |dd|
>
    <dd.Trigger @stopPropagation={{@stopPropagation}} class="button text {{if this.isOpen "active"}} {{if @triggerClass @triggerClass}}">{{yield}}</dd.Trigger>
    <dd.Content @animationEnabled={{false}}>
        <Select::Select
            @options={{@options}}
            @selected={{@selected}}
            @onChange={{fn this.select dd}}
            @onCreate={{this.create}}
            @deselectAll={{@deselectAll}}
            @deselectAllMessage={{@deselectAllMessage}}
            @searchEnabled={{@searchEnabled}}
            @createEnabled={{@createEnabled}}
            @clearSearchOnCreate={{true}}
            @isMultiselect={{@isMultiselect}}
            @searchPlaceholder={{@placeholder}}
            @searchFields={{array @searchField}}
            @noSearchResultsMessage={{@searchMessage}}
            @noOptionsMessage={{@emptyMessage}}
            @optionClass={{@optionClass}}
            as |item|
        >
            <Select::SelectOption @option={{item}} @displayProperty={{@displayProperty}} @selectedIcon="check" />
        </Select::Select>
    </dd.Content>
</BasicDropdown>
