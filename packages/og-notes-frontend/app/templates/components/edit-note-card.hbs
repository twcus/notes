<Modal @focusedElement=".note-textarea" @onClickOverlay={{action "saveNote" model}}>
    <div class="modal-body">
        <Textarea @autoresize=true class="note-textarea" aria-label="Edit note" @rows=10 @value={{model.content}} />
    </div>
    <div class="modal-footer">
        <div class="footer-items">
            <div class="footer-actions">
                <div class="tag-group">
                    {{#each model.tags as |tag|}}
                        <Tag><span>{{tag.content}}</span></Tag>
                    {{/each}}
                </div>
                <div class="icon-group">
                    <button class="button" {{action "showTags"}}>
                        {{fa-icon 'tag'}}
                    </button>
                    <button class="button" {{action "undoChanges" model}}>
                        {{fa-icon 'undo-alt'}}
                    </button>
                    <button class="button">
                        {{fa-icon 'trash'}}
                    </button>
                </div>
            </div>
            {{#if isShowingTags}}
                <TagList @selectedTags={{model.tags}} @onSelectTag={{action "selectTag"}} @createTag={{action "createTag"}} @getAllTags={{action "getAllTags"}}></TagList>
            {{/if}}
        </div>
    </div>
</Modal>
